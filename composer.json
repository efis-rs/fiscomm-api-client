{
  "name": "efis/fiscomm-api-client",
  "description": "Fiscomm API Client",
  "license": "MIT",
  "type": "library",
  "keywords": [
    "fiscomm",
    "purs",
    "fiscalization",
    "api",
    "client"
  ],
  "authors": [
    {
      "name": "Sibin Grašič",
      "email": "sibin.grasic@oblak.studio",
      "homepage": "https://sib.ing",
      "role": "Developer"
    }
  ],
  "homepage": "https://fiscomm.efis.rs",
  "support": {
    "email": "podrska@efis.rs",
    "issues": "https://github.com/efis/fiscomm-api-client/issues",
    "docs": "https://fiscomm.efis.rs"
  },
  "funding": [
    {
      "type": "eFis",
      "url": "https://efis.rs/pretplati-se"
    }
  ],
  "require": {
    "php": ">=8.0",
    "ext-json": "*",
    "php-http/client-common": "^2.3",
    "php-http/discovery": "^1.12",
    "php-http/httplug": "^2.2",
    "psr/http-client-implementation": "^1.0",
    "psr/http-factory": "^1.1",
    "psr/http-message": "^1.0 || ^2.0"
  },
  "require-dev": {
    "guzzlehttp/guzzle": "^7.8",
    "guzzlehttp/psr7": "^2.0",
    "oblak/wordpress-coding-standard": "^1.1",
    "php-http/message": "^1.0",
    "phpstan/extension-installer": "^1.3",
    "phpstan/phpstan": "^1.10",
    "symfony/var-dumper": "^6.4"
  },
  "minimum-stability": "beta",
  "prefer-stable": true,
  "autoload": {
    "psr-4": {
      "Fiscomm\\": "src"
    }
  },
  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "php-http/discovery": false,
      "phpstan/extension-installer": true
    }
  }
}
